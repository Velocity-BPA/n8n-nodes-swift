{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "ES2021",
    "lib": ["ES2021"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": ["./node_modules/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "nodes/**/*.ts",
    "credentials/**/*.ts",
    "data/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "*.js"
  ]
}
